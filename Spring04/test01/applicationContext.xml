<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="today" class="java.util.Date"></bean>
	<!-- Date today -->
	
	<bean id="end" class="java.util.Date">
		<constructor-arg name="year" value="121" />
		<constructor-arg name="month" value="6" />
		<constructor-arg name="date" value="14" />
	</bean>
	
	<bean id="myclass" class="com.test01.MyClass" lazy-init="true"></bean>
	
	<bean id="beanTest" class="com.test01.BeanTest">
		<!-- 0. 기본생성자 -->
		<!-- 1. param 1개짜리 생성자 -->
		<constructor-arg ref="today"/>
		<!-- 2. setMyclass 호출 -->
		<property name="myclass" ref="myclass" />
		<!-- 3. setDate(Date date) 호출 -->
		<property name="date" ref="end"></property>
		<!-- 4. 타입 직접 지정 가능-->
		<property name="number">
			<value type="short">
				100
			</value>
		</property>
		<!-- 5. setArray(String[] arr) 호출 -->
		<property name="array">
			<array>
				<value>박찬종</value>
				<value>단발좌</value>
				<value>김진현</value>
			</array>
		</property>
		<!-- 6. setList(List<String> list 호출 -->
		<property name="list">
			<list>
				<value>봄</value>
				<value>여름</value>
				<value>가을</value>
				<value>겨울</value>
			</list>
		</property>
		<!-- 7. setSet(Set<String> set) 호출 -->
		<property name="set">
			<set>
				<value>1</value>
				<value>1</value>
				<value>2</value>
				<value>2</value>
				<value>3</value>
			</set>
		</property>
		<!-- 8. setMap(Map<Integer, String> map) 호출 -->
		<property name="map">
			<map>
				<entry>
					<key><value>1</value></key>
					<value>봄</value>
				</entry>
				<entry>
					<key><value>2</value></key>
					<value>여름</value>
				</entry>
				<entry key="3" value="가을"></entry>
				<entry key="4" value="겨울"></entry>
			</map>
		</property>
		<!-- 9. setScore(List<Score> list) 호출 -->
		<property name="score">
			<list>
				<bean class="com.test01.Score">
					<property name="name" value="김진현" />
					<property name="kor" value="100" />
					<property name="eng" value="100" />
					<property name="math" value="100" />
				</bean>
				<ref bean="park" />
			</list>
		</property>
	</bean>
	
	<bean id="park" class="com.test01.Score">
		<constructor-arg value="박보영" />
		<constructor-arg value="100" />
		<constructor-arg value="100" />
		<constructor-arg value="100" />
	</bean>
	
</beans>
